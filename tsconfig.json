{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"baseUrl": "src/",
		"paths": {
			"components/*": ["components/*"],
			"lib/*": ["lib/*"],
			"pages/*": ["pages/*"],
			"styles/*": ["styles/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"src/components/Cover/Cover.stories.tsx"
	],
	"exclude": ["node_modules"]
}
